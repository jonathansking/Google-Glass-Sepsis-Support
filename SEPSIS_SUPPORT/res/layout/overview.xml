<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/toDS"
        style="@style/GlassText.XSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Decision\nSupport" />

    <TextView
        android:id="@+id/patientName"
        style="@style/GlassText.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/patientId"
        android:text="Patient Name" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignBottom="@+id/toDS"
        android:layout_alignParentLeft="true"
        android:background="@color/white" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toDS" >

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:measureAllChildren="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/default_user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:text="Patient"
                android:textColor="#000000"
                android:textSize="24sp" />
        </FrameLayout>

        <TableLayout
            android:id="@+id/TableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableRow style="@style/LeftJustRow" >

                <TextView
                    android:id="@+id/DOBLabel"
                    style="@style/GlassText.Row"                    
                    android:text="@string/dob_colon" />

                <TextView
                    android:id="@+id/patientDOB"
                    style="@style/GlassText.Row"                    
                    android:text="@string/empty" />

                <TextView
                    android:id="@+id/SexLabel"
                    style="@style/GlassText.Row"
                    android:text="@string/Sex_colon" />

                <TextView
                    android:id="@+id/patientSex"
                    style="@style/GlassText.Row"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/HospAdmLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/Hosp_Adm_colon" />

                <TextView
                    android:id="@+id/patientHospAdm"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/HospDischLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/Hosp_Disch_colon" />

                <TextView
                    android:id="@+id/patientHospDisch"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/ICUDaysLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/ICU_Days_colon" />

                <TextView
                    android:id="@+id/ICUDays"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/StateLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/State_colon" />

                <TextView
                    android:id="@+id/TextView01"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />
            </TableRow>

        </TableLayout>        
    </LinearLayout>

    <View
   		android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignTop="@+id/overview_bottom_table"
        android:background="@color/white" />

    <TableLayout
        android:id="@+id/overview_bottom_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/textView1"
                style="@style/Heading.Sub.Row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/toVitals"
        style="@style/GlassText.XSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/patientName"
        android:layout_alignBottom="@+id/patientName"
        android:layout_alignParentLeft="true"
        android:text="Vitals" />

    <TextView
        android:id="@+id/patientId"
        style="@style/GlassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/toDS"
        android:text="#ID#" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </FrameLayout>

</RelativeLayout>