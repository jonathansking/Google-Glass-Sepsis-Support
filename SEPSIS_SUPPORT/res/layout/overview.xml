<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/toVitals"
        style="@style/Heading.Sub.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitals" />

    <TextView
        android:id="@+id/toDS"
        style="@style/Heading.Sub.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Decision\nSupport" />

    <TextView
        android:id="@+id/patientId"
        style="@style/Heading.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/toDS"
        android:text="PatientID" />

    <TextView
        android:id="@+id/patientName"
        style="@style/Heading.Sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/patientId"
        android:text="Patient Name" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toDS" >

        <FrameLayout
            android:measureAllChildren="true"
            android:layout_width="164dp"
            android:layout_height="209dp"
            
             >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/default_user" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|bottom"
                android:text="Patient"
                android:textColor="#000000"
                android:textSize="24sp" />
        </FrameLayout>

        <TableLayout
            android:id="@+id/TableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/DOBLabel"
                    style="@style/Heading.Sub.Row"
                    android:text="@string/dob_colon" />

                <TextView
                    android:id="@+id/patientDOB"
                    style="@style/Heading.Sub.Row"
                    android:text="@string/empty" />

                <TextView
                    android:id="@+id/SexLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/Sex_colon" />

                <TextView
                    android:id="@+id/patientSex"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/HospAdmLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/Hosp_Adm_colon" />

                <TextView
                    android:id="@+id/patientHospAdm"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/HospDischLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/Hosp_Disch_colon" />

                <TextView
                    android:id="@+id/patientHospDisch"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />
            </TableRow>

            <TableRow style="@style/Row" >

                <TextView
                    android:id="@+id/ICUDaysLabel"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/ICU_Days_colon" />

                <TextView
                    android:id="@+id/ICUDays"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView02"
                    style="@style/Heading.Sub.Row.Right"
                    android:text="@string/ICU_Days_colon" />

                <TextView
                    android:id="@+id/TextView01"
                    style="@style/Heading.Sub.Row.Left"
                    android:text="@string/empty" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignBottom="@+id/toDS"
        android:layout_alignParentLeft="true"
        android:background="@color/white" />

</RelativeLayout>