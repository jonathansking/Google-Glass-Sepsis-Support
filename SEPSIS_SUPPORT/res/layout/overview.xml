<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TableRow
        style="@style/Row" >
        <TextView
            android:id="@+id/patientName"
        	style="@style/Heading.Right"
            android:text="@string/sampleName" />
        <TextView
            android:id="@+id/patientId"
            style="@style/Heading.Left"
            android:text="@string/sampleId" />
    </TableRow>
    
    <View
        android:layout_height="2dip"
        android:background="@color/white"/>
 
    <TableRow
        style="@style/Row" >
        <TextView
        	style="@style/Heading.Sub.Row.Right"
            android:text="Hospital Adm:" />
        <TextView
            android:id="@+id/patientHospAdm"
        	style="@style/Heading.Sub.Row.Left"
            android:text="@string/sampleHospAdmission" />
    </TableRow>
 
    <TableRow
        style="@style/Row" >
        <TextView
        	style="@style/Heading.Sub.Row.Right"
            android:text="Hospital Disch:" />
        <TextView
            android:id="@+id/patientHospDisch"
        	style="@style/Heading.Sub.Row.Left"
            android:text="@string/sampleHospDischarge" />
    </TableRow>
 
    <TableRow
        style="@style/Row" >
        <TextView
        	style="@style/Heading.Sub.Row.Right"
            android:text="Encounter Number:" />
        <TextView
        	style="@style/Heading.Sub.Row.Left"
            android:text="213" />
    </TableRow>
 
    <TableRow
        style="@style/Row" >
        <TextView
        	style="@style/Heading.Sub.Row.Right"
            android:text="Sex:" />
        <TextView
            android:id="@+id/patientSex"
        	style="@style/Heading.Sub.Row.Left"
            android:text="@string/sampleSex" />
    </TableRow>
 
    <TableRow
        style="@style/Row" >
        <TextView
        	style="@style/Heading.Sub.Row.Right"
            android:text="ICU Days:" />
        <TextView
        	style="@style/Heading.Sub.Row.Left"
            android:text="3" />
    </TableRow>

</TableLayout>